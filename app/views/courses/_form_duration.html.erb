<div class="filtre-text">
  Les cours sur le
    <button class="btn dropdown-toggle filter" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-expanded="false">
      <% if params[:family].present? %>
           <%= params[:family] %>
        <% else %>
          <%= "Choisissez un rayon" %>
          <% end %>
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
    <% @families.each do |family| %>
      <%= link_to "#{family.name}",courses_path(family: "#{family.name}"), class: "dropdown-item" %>
    <% end %>
    </div>
</div>

<div class="difficulties">
  <div>
    <div class="dropdown-filter">
      <span class="filtre-text">Votre niveau</span>
      <button class="btn dropdown-toggle filter" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-expanded="false">
        <% if params[:difficulty].present? %>
           <%= params[:difficulty] %>
        <% else %>
          <%= "Tous" %>
          <% end %>
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <%= link_to "Débutant",courses_path(difficulty: "Débutant"), class: "dropdown-item"%>
        <%= link_to "Intermédiaire",courses_path(difficulty: "Intermédiaire"), class: "dropdown-item" %>
        <%= link_to "Difficile",courses_path(difficulty: "Difficile"), class: "dropdown-item" %>
      </div>
    </div>
  </div>

  <div>
    <div class="dropdown-filter">
    <span class="filtre-text">Choisissez votre durée</span>
      <button class="btn dropdown-toggle filter" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-expanded="false">
        <% if params[:duration].present? %>
           <%= params[:duration] %>
        <% else %>
          <%= "Tous" %>
          <% end %>
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <%= link_to "30 min",courses_path(duration: 30), class: "dropdown-item" %>
        <%= link_to "45 min",courses_path(duration: 45), class: "dropdown-item" %>
        <%= link_to "90 min",courses_path(duration: 90), class: "dropdown-item" %>
      </div>
    </div>
  </div>
</div>
