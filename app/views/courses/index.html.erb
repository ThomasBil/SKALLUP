<div class="filter">
  <div class="filtrer">
    <h2 class="filtre-text">Filtrer vos cours</h2>
    <h3 class="btn-filtre" id="tous">Tous</h3>
    <h3 class="btn-filtre" id="en-cours">En cours </h3>
    <h3 class="btn-filtre" id="termines">Terminés</h3>
  </div>
  <%= render 'form_duration' %>
</div>




<div class="cards">
  <% @courses.each do |course| %>
    <div class = "card-product">
      <% unless course.progresses.empty? %>
          <i class="fas fa-check-circle"></i>
      <% else %>
        <i class="fas fa-check-circle hidden"></i>
      <% end %>
        <%= cl_image_tag course.photo.key, height: 300, width: 400, crop: :fill %>
        <div class="card-product-infos">
          <h2><%= course.title %></h2>
          <ul class= "card-online">
            <li>
              <div class = "alignement m-3">
                <% if course.difficulty == "Difficile" %>
                    <i class="fas fa-hammer active"></i> <i class="fas fa-hammer active"></i> <i class="fas fa-hammer active"></i>
                <% elsif course.difficulty == "Intermédiaire" %>
                    <i class="fas fa-hammer active"></i> <i class="fas fa-hammer active"></i></i> <i class="fas fa-hammer inactive", style="color: rgba(0,0,0,0.3)"></i>
                <% else %>
                    <i class="fas fa-hammer active"></i> <i class="fas fa-hammer inactive", style="color: rgba(0,0,0,0.3)"></i> <i class="fas fa-hammer inactive", style="color: rgba(0,0,0,0.3)"></i>
                <% end %>
                <p>Difficulté</p>
              </div>
            </li>
            <li><p id="style"> <%= course.duration %> min</p></li>
          </ul>
          <%= link_to 'DÉMARRER', course_path(course), class: "btn-cours" %>
        </div>
      </div>
  <% end %>
</div>
